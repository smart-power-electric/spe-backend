{
  "name": "smart_power_electric_backend",
  "description": "Documentation for the Smart Power Electric Backend",
  "version": "1.0.0",
  "author": "El tiburon Raymel Ramos Guerra",
  "license": "MIT",
  "private": true,
  "scripts": {
    "compodoc": "compodoc -p tsconfig.json -d ./documentation -c compodoc.config.json",
    "build": "npm run compodoc && npm run apiv && tsc --noEmit && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format-check": "prettier --check \"src**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run compodoc && tsc --noEmit && nest start",
    "start:warnings": "npm run compodoc && tsc --noEmit && nest build && node --trace-warnings dist/main",
    "start:dev": "npm run compodoc && tsc --noEmit && nest start -b swc -w --debug",
    "start:debug": "npm run compodoc && tsc --noEmit && nest start --debug --watch",
    "start:prod": "npm run compodoc && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint-fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dbgen": "drizzle-kit generate --config=./drizzle.config.ts",
    "dbgenc": "drizzle-kit generate --custom --config=./drizzle.config.ts",
    "dbpull": "drizzle-kit introspect --config=./drizzle.config.ts",
    "dbcheck": "drizzle-kit check --config=./drizzle.config.ts",
    "dbdrop": "drizzle-kit drop --config=./drizzle.config.ts",
    "gensdk": "npx openapi-generator-cli generate --generator-key v3.0 v2.0 -g typescript-axios -i https://localhost:3000/v1/api-json -o ./src/services/communication/sdk",
    "apiv": "node ./scripts/generate_apiversion.js",
    "foldering:w": "cmd /c .\\scripts\\foldering.bat",
    "foldering:l": "bash ./scripts/foldering.sh"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.5",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.5",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/platform-express": "^10.4.5",
    "@nestjs/swagger": "^7.4.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.3",
    "helmet": "^8.0.0",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.15.0",
    "zod": "^3.23.8",
    "@compodoc/compodoc": "^1.1.26"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.2.2",
    "@nestjs/testing": "^10.4.5",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.36",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.7",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
